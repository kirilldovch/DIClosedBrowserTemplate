<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:components="clr-namespace:MainComponents.Components;assembly=MainComponents">
    <Style TargetType="ButtonBase" x:Key="BaseButtonStyle">
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="DefaultButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource Inter}" />
        <Setter Property="Background" Value="White" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{StaticResource OrangeColor}"
                    ShadowDepth="8"
                    Opacity="0.46"
                    BlurRadius="20" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="NavigationButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="900" />
        <Setter Property="Height" Value="800" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="White"
                                CornerRadius="120"
                                Opacity=".85" />
                        <Border Padding="64">
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00000026"
                                  ShadowDepth="5"
                                  Opacity=".3"
                                  BlurRadius="20" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="CustomButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{DynamicResource ButtonBackground}"
                            CornerRadius="60">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="KeyboardCheckBox" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Border Background="{DynamicResource ButtonBackground}"
                            CornerRadius="60">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="SpecialFeaturesButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border Background="{DynamicResource ButtonPanelBackground}"
                                CornerRadius="60 60 0 0"
                                BorderThickness="0">
                            <ContentPresenter ContentTemplate="{DynamicResource ArrowIcon}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Name="Presenter"
                                              Height="60"
                                              Width="60" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="DefaultKeyboardButtonStyles"
           BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="42" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="MainKeyboardButtonStyles"
           BasedOn="{StaticResource DefaultKeyboardButtonStyles}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="components:RoundedButton">
                    <Border Style="{StaticResource DefaultKeyboardBorderStyle}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{StaticResource MainKeyboardTextTemplate}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="AdditionalButtonStyle"
           BasedOn="{StaticResource DefaultKeyboardButtonStyles}">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="components:RoundedButton">
                    <Border Style="{StaticResource DefaultKeyboardBorderStyle}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{StaticResource MainKeyboardTextTemplate}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="MoveKeyboardButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border Background="{DynamicResource ButtonPanelBackground}"
                                CornerRadius="40 40 0 0"
                                BorderThickness="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>